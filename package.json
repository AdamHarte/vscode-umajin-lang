{
    "name": "umajin-lang",
    "displayName": "Umajin Language",
    "description": "Provide Umajin language support for Visual Studio Code.",
    "version": "0.0.3",
    "license": "MIT",
    "publisher": "adamharte",
    "author": {
        "name": "Adam Harte",
        "email": "adam@adamharte.com",
        "url": "http://adamharte.com"
    },
    "categories": [
        "Programming Languages"
    ],
    "homepage": "https://github.com/AdamHarte/vscode-umajin-lang",
    "icon": "images/umajin-logo.png",
    "galleryBanner": {
        "color": "#23323d",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.26.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/AdamHarte/vscode-umajin-lang"
    },
    "keywords": [
        "multi-root ready"
    ],
    "activationEvents": [
        "onCommand:workbench.action.tasks.runTask"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "umajin",
                "aliases": [
                    "Umajin",
                    "umajin"
                ],
                "extensions": [
                    ".u"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "umajin",
                "scopeName": "source.umajin",
                "path": "./syntaxes/umajin.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "umajin",
                "path": "./snippets/umajin.json"
            }
        ],
        "taskDefinitions": [
            {
                "type": "umajin-run",
                "required": [
                    "task"
                ],
                "properties": {
                    "task": {
                        "type": "string",
                        "description": "The Rake task to customize"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.4.1",
        "vscode": "^1.1.17",
        "@types/node": "*"
    }
}
